{
  "manifest_version": 3,
  "name": "マイネ王掲示板既読管理",
  "description": "マイネ王掲示板の未読・既読の管理や非表示の処理を行います。",
  "version": "0.2",
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
     "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": ["https://king.mineo.jp/*"]
}
