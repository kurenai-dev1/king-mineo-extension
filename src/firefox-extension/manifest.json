{
  "manifest_version": 3,
  "name": "マイネ王掲示板既読管理",
  "description": "マイネ王掲示板の未読・既読の管理や非表示の処理を行います。",
  "version": "0.2",
  "browser_specific_settings": {
    "gecko": {
      "id": "mineo-extention-id@jroom.top",
      "data_collection_permissions": {
        "required": ["none"]
      },
       "strict_min_version": "142.0" 
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": ["https://king.mineo.jp/*"]
}