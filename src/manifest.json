{
  "manifest_version": 3,
  "name": "マイネ王掲示板履歴管理",
  "description": "マイネ王掲示板の未読・既読や非表示の処理を行います。",
  "version": "0.2",
  "action": {
    "default_popup": "readme_popup.html"
  },
  "background": {
     "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "tabs"
  ],
  "host_permissions": ["https://king.mineo.jp/*"]
}
